<h1>Register Here!</h1>

<%- include ("./partials/messages") %>


<form action="/users/register" method="POST">
  <input name="email" type="email" id="email-reg" placeholder="Email" required
  value="<%= typeof email != 'undefined' ? email : '' %>">

  <input name="nickname" type="nickname" id="nickname-reg" placeholder="Nickname" required
  value="<%= typeof nickname != 'undefined' ? nickname : '' %>">

  <input name="password1" type="password" id="password-reg" placeholder="Password" required
  value="<%= typeof password != 'undefined' ? password : '' %>">

  <input name="password2" type="password" id="comf-password-reg" placeholder="Comfirm Password" required
  value="<%= typeof password2 != 'undefined' ? password2 : '' %>">

  <button type="submit">Register</button>
</form>

<form action="/users/login" method="GET">
  <button>Already have an account?</button>
</form>
